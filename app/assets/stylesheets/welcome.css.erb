.font-dropshadow {
  text-shadow: .04em .04em 0 #fff,.08em .08em 0 #aaa;
  -webkit-text-shadow: .04em .04em 0 #fff, .08em .08em 0 #aaa;
}

.full-width-title p {
  text-align: center;
  font-size: 2em;
  font-family: 'Petit Formal Script', cursive;
  font-weight: bold;
}

.subtitle p {
  text-align: center;
  font-size: 1.5em;
  font-family: 'Petit Formal Script', cursive;
  font-weight: bold;
}

.location-title p {
  margin-top: .25em;
  margin-bottom: .25em;
  text-align: center;
  font-size: 1.5em;
  font-weight: bold;
}

.overlay {
  background: light-grey;
  height: 100vh;
  width: 100vw;
  top: 0;
  left: 0;
  position: absolute;
  padding: 0;
  opacity: .9;
  z-index: 5;
}

.cover-page {
  background: url('<%= asset_path("book-heart.jpg") %>') no-repeat center center;
  background-size: cover;
  height: 100vh;
  width: 100vw;
}

.church-page {
  background: url('<%= asset_path("bethel.jpg") %>') no-repeat center center;
  background-size: cover;
  height: 100vh;
  width: 100vw;
  color: white;
}

.reception-page {
  background: url('<%= asset_path("reception.jpg") %>') no-repeat center center;
  background-size: cover;
  height: 100vh;
  width: 100vw;
}

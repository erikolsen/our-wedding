.font-dropshadow {
  text-shadow: .04em .04em 0 #fff,.08em .08em 0 #aaa;
  -webkit-text-shadow: .04em .04em 0 #fff, .08em .08em 0 #aaa;
}

.full-width-title p {
  text-align: center;
  font-size: 3.75em;
  font-family: 'Merienda One', cursive;
  font-weight: bold;
  line-height: 1.2em;
}

.subtitle p {
  text-align: center;
  font-size: 1.5em;
  font-family: 'Merienda One', cursive;
  font-weight: bold;
}

.location-title p {
  margin-top: .25em;
  margin-bottom: .25em;
  text-align: center;
  font-size: 1.5em;
  font-weight: bold;
}

.cover-page {
  background: url('<%= asset_path("book-heart.jpg") %>') no-repeat center center;
  background-size: cover;
  height: 100vh;
  width: 100vw;
}

.church-page {
  background: url('<%= asset_path("bethel.jpg") %>') no-repeat center center;
  background-size: cover;
  height: 80vh;
  width: 100vw;
  color: white;
}

.church-page .full-width-title{
  font-size: .5em;
}

.reception-page {
  background: url('<%= asset_path("reception.jpg") %>') no-repeat center center;
  background-size: cover;
  height: 80vh;
  width: 100vw;
}
.info h1 {
  text-align: center;
  font-size: 3em;
  font-family: 'Merienda One', cursive;
  font-weight: bold;
  line-height: 1.2em;
}

.info p {
  font-family: 'Merienda One', cursive;
  font-size: 2em;
  text-align: center;
}

.reception-page .map {
  width: 50vw;
}

.registry-page {
  background: url('<%= asset_path("registry_hearts.jpg") %>') no-repeat center bottom;
  background-size: cover;
  height: 80vh;
  width: 100vw;
}
